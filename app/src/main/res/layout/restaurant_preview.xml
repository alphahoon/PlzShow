<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_cardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/res_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:alpha="0.7"
            android:src="@drawable/restaurant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="false"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left|bottom"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/res_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="류니끄"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/big_text" />

                    <TextView
                        android:id="@+id/res_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가로수길 . 컨템퍼러리"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/small_text"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/res_descrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가로수길에 위치한 류태환 셰프의 컴템포러리 퀴진"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small_text"/>

                <TextView
                    android:id="@+id/res_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호: 02-546-9279"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/small_text"/>

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>



</android.support.v7.widget.CardView>

