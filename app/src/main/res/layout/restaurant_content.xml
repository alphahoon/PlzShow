<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/res_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/restaurant_padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/res_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="류니끄 / "
                    android:textSize="@dimen/big_text"/>

                <TextView
                    android:id="@+id/reserv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 42"
                    android:textSize="@dimen/small_text"/>

            </LinearLayout>
            <TextView
                android:id="@+id/res_full_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가로수길에 위치한 류태환 셰프의 비스트로"
                android:textSize="@dimen/small_text"/>
            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:clickable="false"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/res_full_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:text="4.1점 / " />
                <TextView
                    android:id="@+id/res_full_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:text="가로수길·컨템퍼러리"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_powerReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/res_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/res_full_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/res_text_address"
                android:text="서울시 강남구 신사동 520-1"
                android:layout_width="wrap_content"
                android:padding="@dimen/restaurant_padding"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_full_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/restaurant_padding"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text ="전화번호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/res_full_phone"
                    android:text="02-546-9279"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/relativeLayout">

            <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/restaurant_padding"
            android:background="@color/gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="편의정보"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:text="업데이트 날짜: 2016-09-09"
                    android:textColor="@color/silver"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/small_text"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="영업시간"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_operation_time"
                    android:text="12:00 - 22:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="쉬는시간"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_rest_time"
                    android:text="14:30 - 17:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="휴일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_holiday"
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="가격"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_price"
                    android:text="만원-2만원 / 1인"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="예약금"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_coin"
                    android:text="500코인 / 1인"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/restaurant_padding"
                android:orientation="horizontal">
                <TextView
                    android:text="평균응답시간"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/res_full_respond_time"
                    android:text="30분"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.6"/>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:id="@+id/res_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>