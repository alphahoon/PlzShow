<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.q.plzshow.Fragment.CTabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <ImageView
                android:id="@+id/imgView_profile"
                android:src="@drawable/default_user"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtView_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름 없음"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="가입일시"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/txtView_joindate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="2017년 1월 1일"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="휴대폰"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/txtView_user_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="000-0000-0000"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="코인"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/txtView_user_coin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="0"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="노쇼지수"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/txtView_user_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="0%"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
